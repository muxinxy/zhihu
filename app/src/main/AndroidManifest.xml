<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zz.zhihu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/zhihu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MessageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.PersonActivity" />
        <activity android:name=".activity.AboutActivity" />
        <activity android:name=".activity.IndexActivity" />
        <activity
            android:name=".activity.HotActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.LikeColumnActivity" />
        <activity android:name=".activity.LikeArticleActivity" />
        <activity android:name=".activity.ArticleActivity" />
        <activity android:name=".activity.LongCommitsActivity" />
        <activity android:name=".activity.ShortCommitsActivity" />
        <activity android:name=".activity.LoveColumnActivity" />
        <activity android:name=".activity.LoveArticleActivity" />
        <activity android:name=".activity.LastNewsActivity">

        </activity>
    </application>

</manifest>